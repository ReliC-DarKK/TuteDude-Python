#Task 1: Calculate Factorial using a (recursive) function

def fact(num):
    if num == 0 or num == 1:
        return 1
    else:
        return num * fact(num - 1)

print("Welcome to Factorial Calculator!")
a = int(input("Enter the number: "))
print(f"Calculating {a}!...")
print(f"The factorial of {a} is {fact(a)}.")
